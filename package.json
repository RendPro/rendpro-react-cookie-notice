{
  "name": "@rendpro/react-cookie-notice",
  "description": "A simple and customizable cookie notice bar for use in React websites.",
  "author": "@rendpro",
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "version": "3.0.0-beta.3",
  "repository": "https://github.com/RendPro/rendpro-react-cookie-notice",
  "private": false,
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./styles-cookie-notice": "./dist/style-cookie-notice.css",
    "./styles-consent-mode-banner": "./dist/style-consent-mode-banner.css"
  },
  "scripts": {
    "dev": "vite",
    "test": "jest",
    "build:scss-consent-mode-banner": "bun sass src/lib/ConsentModeBanner/component.styles.scss dist/style-consent-mode-banner.css",
    "build:scss-cookie-notice": "bun sass src/lib/CookieNotice/component.styles.scss dist/style-cookie-notice.css",
    "build:scss": "bun build:scss-cookie-notice && bun build:scss-consent-mode-banner",
    "build": "tsc && vite build && bun build:scss",
    "publish:npm": "yarn prepublish"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist/**/*"
  ],
  "dependencies": {
    "clsx": "^2.0.0",
    "react-use": "^17.4.0",
    "remove": "^0.1.5"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/bun": "^1.1.2",
    "@types/gtag.js": "^0.0.19",
    "@types/jest": "^29.5.8",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/react-helmet": "^6.1.11",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.2.0",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.19.0",
    "scss": "^0.2.4",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.3"
  }
}
